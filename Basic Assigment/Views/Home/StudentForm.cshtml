
@{
    ViewData["Title"] = "StudentForm";
}
<body onload="PopulateDate()">
    <table id="maimTable">
        <tr>
            <td>
                <form onsubmit="event.preventDefault();onFormSubmit();" autocomplete="off">
                    <div><h2>Student Registration Form</h2></div>

                    <input type="text" name="fullName" id="fullName" placeholder="Full Name">
                    <label class="validation-error hide" id="fullNameValidationError">This field is required.</label>

                    <input type="text" name="FthName" id="FthName" placeholder="Father Name">
                    <label class="validation-error hide" id="fthNameValidationError">This field is required.</label>
                    <div>
                        <input type="text" name="CNIC" id="CNIC" placeholder="XXXX-XXXXXXX-X">
                        <label class="validation-error hide" id="CNICvalidationError"> This field is required.</label>
                        <input type="text" name="phone" id="phone" placeholder="0300-0000000">
                        <label class="validation-error hide" id="phonevalidationError">This field is required.</label>
                    </div>
                    <br />
                    <label>Course</label><label class="validation-error hide" id="courseValidationError">This field is required.</label>
                    <select name="course" id="course" class="form-control">

                        <option value="HTML">HTML</option>
                        <option value="CSS">CSS</option>
                        <option value=".Net">.Net</option>
                    </select>

                    <div>
                        <label>Gender</label><br />
                        <input type="radio" name="gender" id="male" value="Male">
                        <label for="male">Male</label>
                        <input type="radio" name="gender" id="female" value="Female">
                        <label for="female">Female</label>
                    </div>
                    <br />
                    <input type="radio" name="active" id="active" value="active">
                    <label for="active">Active</label>
                    <input type="radio" name="active" id="inactive" value="inactive">
                    <label for="inactive">Inactive</label>
                    <div class="form-action-buttons">
                        <button class="btn btn-primary" value="Submit">Save</button>
                    </div>
                </form>
            </td>
        </tr>
    </table>
    <br />
    <br />
    <table class="list" id="studentList">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Father Name</th>
                <th>CNIC</th>
                <th>phone</th>
                <th>Course</th>
                <th>Gender</th>
                <th>Active/Inactive</th>
                <th>Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tblStudent">
        </tbody>
    </table>

</body>

<link href="~/css/studentFormcss.css" rel="stylesheet" />
<script src="~/js/studentForm.js"></script>



